<Window x:Class="CoverageAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoverageAnalyzer" d:DataContext="{d:DesignInstance Type=local:CodeCoverage}"
        mc:Ignorable="d"
        Title="Code Coverage Analyzer - By Partha" Height="500" Width="900">

    <Window.Resources>
        <Style TargetType="TreeViewItem">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
    </Window.Resources>
    <!-- Menu -->
    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OnFileOpenClick"/>
                <MenuItem Header="Close" Click="OnFileCloseClick"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Frame -->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2 2 0 2">
                <TreeView Name="treeView" Margin="1" MouseDoubleClick="OnMouseDoubleClickOnTreeViewNode"
                          Background="LightGray"/>
            </Border>

            <!-- GridSplitter for resizable border -->
            <GridSplitter Grid.Column="1" Width="2" Background="Black" HorizontalAlignment="Stretch"/>

            <!-- Right Frame -->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0 2 2 2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top of Right Frame -->
                    <!-- Top of Right Frame -->
                    <!-- Fixed Header Row -->
                    <!-- Fixed Header Row -->
                    <Border Background="LightGray" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontFamily="Consolas" FontSize="12" FontWeight="Bold" Text="Hits" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" FontFamily="Consolas" FontSize="12" FontWeight="Bold" Text="Line" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" FontFamily="Consolas" FontSize="12" FontWeight="Bold" Text="Content" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <FlowDocumentScrollViewer Grid.Row="0" Grid.Column="0" x:Name="flowDocumentScrollViewer" Margin="5" 
                                              VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                              VerticalScrollBarVisibility="Auto" 
                                              Document="{Binding CodeCover.FlowDoc, Mode=OneWay}"
                                              >
                    </FlowDocumentScrollViewer>

                    <!-- Bottom of Right Frame -->
                    <DockPanel Grid.Row="1">
                        <!-- Recompute Button -->
                        <Button Content="Recompute" DockPanel.Dock="Left" Margin="5" VerticalAlignment="Bottom" Click="OnRecomputeClick">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" ShadowDepth="0" Opacity="0" />
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="Black" ShadowDepth="5" Opacity="0.5" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Non-editable TextBox -->
                        <TextBox Margin="5" VerticalAlignment="Bottom" IsReadOnly="True" 
                                 Text="{Binding LoadedSrcFullFilePath, Mode=OneWay}"/>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
